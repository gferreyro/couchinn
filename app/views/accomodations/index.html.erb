<h1>Listing accomodations</h1>

<table>
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descripcion</th>
      <th>Imagen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accomodations.each do |accomodation| %>
      <tr>
        <td><%= accomodation.titulo %></td>
        <td><%= accomodation.descripcion %></td>
        <td><%= accomodation.imagen %></td>
        <td><%= link_to 'Show', accomodation %></td>
        <td><%= link_to 'Edit', edit_accomodation_path(accomodation) %></td>
        <td><%= link_to 'Destroy', accomodation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Accomodation', new_accomodation_path %>
