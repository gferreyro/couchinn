<%= form_for(@accomodation) do |f| %>
  <% if @accomodation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@accomodation.errors.count, "error") %> no permiten guardar:</h2>

      <ul>
      <% @accomodation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :titulo %><br>
    <%= f.text_field :titulo, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label "Tipo de hospedaje" %>
    <br>
    <%= f.collection_select(:accommodation_type_id, AccommodationType.where(activo:true).order(:descripcion), :id, :descripcion) %>
  </div>
  <div class="field">
    <%= f.label "Imágen" %><br>
    <%= select_tag :imagen, options_from_collection_for_select(Image.all, :url, :descripcion), :onchange => 'imag.src = imagen.value' %>
    <br>
    <%= image_tag(Image.first.url, :alt => "imagen", :name => "imag", height:"200") %>
  </div>
  <!--
  <%= f.label "Subir imagen del sitio" %><br>
  -->
  <!--
  <div class="field">
    <%= f.label :imagen %><br>
    <%= f.text_area :imagen %>
  </div>
  -->
  <div class="actions">
    <%= f.submit 'Guardar', class: "btn btn-primary"%>
    <%= link_to 'Cancelar', accomodations_path, class: "btn btn-default"%>
  </div>
