      <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :url, placeholder: "Dirección web", class: "form-control" %><br>
  </div>
  <div class="field">
    <%= f.text_field :descripcion, placeholder: "Descripción", class: "form-control" %><br>
  </div>
  <div class="field">
    <% if !(@image.url.nil?) and !(@image.url.blank?) %>
      <%= image_tag(@image.url) %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary"%>
    <%= link_to 'Atrás', images_path, class: "btn btn-default" %>
  </div>
<% end %>
