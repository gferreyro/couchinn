<h1>Solicitudes</h1>

<table class="table table">
  <thead>
    <tr>
      <th>Usuario</th>
      <th>Hospedaje</th>
      <th>Desde</th>
      <th>Hasta</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.user.nombre_completo %></td>
        <td><%= request.accomodation.titulo %></td>
        <td><%= request.from %></td>
        <td><%= request.to %></td>
        <td><%= request.status %></td>
        <td><%= link_to 'Mostrar', request, class: "btn btn-default" %></td>
        <td><%= link_to 'Editar', edit_request_path(request), class: "btn btn-primary" %></td>
        <td><%= link_to 'Eliminar', request, class: "btn btn-danger", method: :delete, data: { confirm: 'EstÃ¡ seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva solicitud', new_request_path, class: "btn btn-success" %>