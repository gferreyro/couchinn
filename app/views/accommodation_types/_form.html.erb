<%= form_for(@accommodation_type) do |f| %>
  <% if @accommodation_type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@accommodation_type.errors.count, "Error") %>: No se puede guardar</h2>

      <ul>
      <% @accommodation_type.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_field :descripcion %>
  </div>
  <div class="field">
    <%= f.label :activo %>
    <%= f.check_box :activo %>
  </div>
  <div class="actions">
    <%= f.submit "Guardar", class: "btn btn-primary"%>
    <%= link_to 'Cancelar', accommodation_types_path, class: "btn btn-default"%>
  </div>
<% end %>
<%= form_for(@user) do |f| %>
  <%= render "shared/error_messages", :target => @user %>
  
  <div class="field">
    <%= f.label :name %><%= mark_required(@user, :name) %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><%= mark_required(@user, :email) %><br />
    <%= f.text_field :email %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>